class User {
  final String id;
  final String name;
  final String? username;
  final String? password;

  User({required this.id, required this.name, required this.username, required this.password});

  factory User.fromJson(Map<String, dynamic> json) {
    return User(
      id: json['_id'],
      username: json['username'],
      password: json['password'],
      name: json['name'],
    );
  }

  Map<String, dynamic> toJson() {
    return {
      '_id': id,
      'name': name,
      'username': username,
      'password': password,
    };
  }
}
